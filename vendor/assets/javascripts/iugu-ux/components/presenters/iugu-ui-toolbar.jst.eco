<div class="button-group">
  <% for button in _.pairs(@buttons): %>
    <a href="#" class="button <%= button[0] %> <%= button[1].class %>" data-action="<%= button[0] %>">
      <% if button[1].class: %>
      <div class="icon no-space"></div>
      <% end %>
    <%- button[1].text %>
    </a>
  <% end %>
</div>

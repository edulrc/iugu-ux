<div class="notice <%= @alertClass %>">
  <a class="close" data-dismiss="notice" href="#">x</a>
  <h4 class="notice-heading"><%= @headerText %></h4>
  <% if @bodyText: %>
    <p><%= @bodyText %></p><br/>
  <% end %>
  <% if @buttonText: %>
    <a class="button" data-dismiss="alert" href="#"><%= @buttonText %></a>
  <% end %>
</div>
